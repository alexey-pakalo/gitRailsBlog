<article class="post">
	<h1> <%=@post.title%></h1>
		<section class="post-head">
			<small>
				<time><%= @post.created_at.to_date.strftime("%d %B, %Y") %></time>
				<%= link_to 'Изменить', edit_post_path(@post) %>
				<%= link_to 'Удалить', post_path(@post), method: :delete, data: { confirm:'Вы действительно хотите удалить статью?'}%>		
			</small>
		</section>
		<section class="post-body ">
		<%= image_tag @post.image.url(:large),class: 'img-show ' if @post.image?%>
						<%= @post.body%>
		</section>
</article>
	

	